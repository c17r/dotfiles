#!/usr/bin/env bash

function start() {
	
	if [ -z "$1" ]
	then
		mkdir -p ~/odrive/Box/Sync/ipython-notebook/
		pushd ~/odrive/Box/Sync/ipython-notebook/
		jupyter notebook &
		popd
	else
		open http://localhost:8888
	fi

}

function stop() {

	if [ -n "$1" ]
	then
		kill $1
	fi

}

PID=$(ps auxwww | awk '/jupyter/ && !/awk/ { print $2 }')

case "$1" in
	stop)
		stop $PID
		;;
	*)
		start $PID
		;;
esac
